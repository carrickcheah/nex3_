<%- include('../../../shared/components/header.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %> | NexERP</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css">
    <style>
        body {
            background-color: #f5f5f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .navbar {
            background-color: #3c4b64;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        
        .navbar-brand {
            font-weight: 700;
            color: #fff;
        }
        
        .card {
            border: none;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }
        
        .card-header {
            background-color: #fff;
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
            padding: 0.75rem 1.25rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .card-header h5 {
            margin-bottom: 0;
            font-weight: 600;
            color: #3c4b64;
        }
        
        .btn-primary {
            background-color: #4638c2;
            border-color: #4638c2;
        }
        
        .btn-primary:hover {
            background-color: #3c2eb0;
            border-color: #3c2eb0;
        }
        
        .btn-success {
            background-color: #45a164;
            border-color: #45a164;
        }
        
        .btn-success:hover {
            background-color: #3b8a55;
            border-color: #3b8a55;
        }
        
        .btn-danger {
            background-color: #e55353;
            border-color: #e55353;
        }
        
        .btn-danger:hover {
            background-color: #d03b3b;
            border-color: #d03b3b;
        }
        
        .table th {
            font-weight: 600;
            color: #3c4b64;
            border-top: none;
            background-color: #f8f9fa;
        }
        
        .table td {
            vertical-align: middle;
        }
        
        .badge {
            font-weight: 500;
            padding: 0.5em 0.75em;
        }
        
        .badge-success {
            background-color: #45a164;
        }
        
        .badge-danger {
            background-color: #e55353;
        }
        
        .search-box {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .search-box .form-control {
            border-radius: 4px 0 0 4px;
        }
        
        .search-box .btn {
            border-radius: 0 4px 4px 0;
        }
        
        .pagination .page-link {
            color: #4638c2;
        }
        
        .pagination .page-item.active .page-link {
            background-color: #4638c2;
            border-color: #4638c2;
        }
        
        .action-buttons .btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
            margin-right: 5px;
        }
        
        .action-buttons .btn:last-child {
            margin-right: 0;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">NexERP</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/page/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/page/sales">Sales</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/page/sales/customer/general">Customers <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-user-circle mr-1"></i> <%= user?.user_name || 'User' %>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                            <a class="dropdown-item" href="/page/profile">Profile</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/logout">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">Customer Setup</h6>
                    </div>
                    <div class="list-group list-group-flush">
                        <a href="/page/sales/customer/general" class="list-group-item list-group-item-action active">
                            <i class="fas fa-users mr-2"></i> General Setup
                        </a>
                        <a href="/page/sales/customer/type" class="list-group-item list-group-item-action">
                            <i class="fas fa-tags mr-2"></i> Customer Types
                        </a>
                        <a href="/page/sales/customer/group" class="list-group-item list-group-item-action">
                            <i class="fas fa-layer-group mr-2"></i> Customer Groups
                        </a>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <main class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Customer Management</h5>
                        <a href="/page/sales/customer/general/add" class="btn btn-primary">
                            <i class="fas fa-plus mr-1"></i> Add Customer
                        </a>
                    </div>
                    <div class="card-body">
                        <!-- Search Box -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="search-box">
                                    <input type="text" id="searchInput" class="form-control" placeholder="Search customers...">
                                    <button id="searchBtn" class="btn btn-primary">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-6 text-right">
                                <div class="form-inline justify-content-end">
                                    <label for="limitSelect" class="mr-2">Show</label>
                                    <select id="limitSelect" class="form-control form-control-sm mr-2">
                                        <option value="10">10</option>
                                        <option value="25">25</option>
                                        <option value="50">50</option>
                                        <option value="100">100</option>
                                    </select>
                                    <label>entries</label>
                                </div>
                            </div>
                        </div>

                        <!-- Customers Table -->
                        <div class="table-responsive">
                            <table class="table table-hover" id="customersTable">
                                <thead>
                                    <tr>
                                        <th width="5%">NO</th>
                                        <th width="15%">CUSTOMER NAME</th>
                                        <th width="10%">SHORT NAME</th>
                                        <th width="10%">TAG</th>
                                        <th width="10%">ACCOUNT ID</th>
                                        <th width="10%">TAX CODE</th>
                                        <th width="15%">EXEMPTION CERTIFICATE NO.</th>
                                        <th width="10%">PAYMENT TERM</th>
                                        <th width="5%">STATUS</th>
                                        <th width="10%">ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody id="customersTableBody">
                                    <!-- Table content will be loaded via AJAX -->
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <div class="row">
                            <div class="col-md-6">
                                <div id="tableInfo" class="text-muted">
                                    Showing 0 to 0 of 0 entries
                                </div>
                            </div>
                            <div class="col-md-6">
                                <nav aria-label="Page navigation">
                                    <ul class="pagination justify-content-end" id="pagination">
                                        <!-- Pagination will be generated via JavaScript -->
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this customer? This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function() {
            let currentPage = 1;
            let limit = 10;
            let search = '';
            let totalPages = 0;
            let deleteCustomerId = null;

            // Initial load
            loadCustomers(currentPage, limit, search);

            // Search button click event
            $('#searchBtn').on('click', function() {
                search = $('#searchInput').val();
                currentPage = 1;
                loadCustomers(currentPage, limit, search);
            });

            // Search input enter key event
            $('#searchInput').on('keyup', function(e) {
                if (e.key === 'Enter') {
                    search = $(this).val();
                    currentPage = 1;
                    loadCustomers(currentPage, limit, search);
                }
            });

            // Limit select change event
            $('#limitSelect').on('change', function() {
                limit = parseInt($(this).val());
                currentPage = 1;
                loadCustomers(currentPage, limit, search);
            });

            // Handle delete button click
            $(document).on('click', '.btn-delete', function() {
                deleteCustomerId = $(this).data('id');
                $('#deleteModal').modal('show');
            });

            // Confirm delete button click
            $('#confirmDelete').on('click', function() {
                if (deleteCustomerId) {
                    deleteCustomer(deleteCustomerId);
                }
            });

            // Function to load customers
            function loadCustomers(page, limit, search) {
                $.ajax({
                    url: '/api/sales/customer/general',
                    type: 'GET',
                    data: { page, limit, search },
                    success: function(response) {
                        if (response.success) {
                            displayCustomers(response.data);
                            setupPagination(response.pagination);
                            updateTableInfo(response.pagination);
                        } else {
                            alert('Failed to load customers: ' + response.message);
                        }
                    },
                    error: function(xhr) {
                        console.error('Error loading customers:', xhr);
                        alert('An error occurred while loading customers. Please try again.');
                    }
                });
            }

            // Function to display customers in the table
            function displayCustomers(customers) {
                const tableBody = $('#customersTableBody');
                tableBody.empty();

                if (customers.length === 0) {
                    tableBody.append(`
                        <tr>
                            <td colspan="10" class="text-center">No customers found</td>
                        </tr>
                    `);
                    return;
                }

                customers.forEach((customer, index) => {
                    const rowNum = (currentPage - 1) * limit + index + 1;
                    const statusBadge = customer.status === 1 
                        ? '<span class="badge badge-success">Active</span>' 
                        : '<span class="badge badge-danger">Inactive</span>';

                    tableBody.append(`
                        <tr>
                            <td>${rowNum}</td>
                            <td>${customer.customer_name || ''}</td>
                            <td>${customer.short_name || ''}</td>
                            <td>${customer.tag || ''}</td>
                            <td>${customer.account_id || ''}</td>
                            <td>${customer.tax_code || ''}</td>
                            <td>${customer.exemption_certificate || ''}</td>
                            <td>${customer.payment_term || ''}</td>
                            <td>${statusBadge}</td>
                            <td class="action-buttons">
                                <a href="/page/sales/customer/general/view/${customer.customer_id}" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="/page/sales/customer/general/edit/${customer.customer_id}" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button class="btn btn-sm btn-danger btn-delete" data-id="${customer.customer_id}">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    `);
                });
            }

            // Function to set up pagination
            function setupPagination(pagination) {
                const paginationElement = $('#pagination');
                paginationElement.empty();

                totalPages = Math.ceil(pagination.total / pagination.limit);

                // Previous button
                paginationElement.append(`
                    <li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
                        <a class="page-link" href="#" data-page="${currentPage - 1}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                `);

                // Page numbers
                const startPage = Math.max(1, currentPage - 2);
                const endPage = Math.min(totalPages, startPage + 4);

                for (let i = startPage; i <= endPage; i++) {
                    paginationElement.append(`
                        <li class="page-item ${i === currentPage ? 'active' : ''}">
                            <a class="page-link" href="#" data-page="${i}">${i}</a>
                        </li>
                    `);
                }

                // Next button
                paginationElement.append(`
                    <li class="page-item ${currentPage === totalPages || totalPages === 0 ? 'disabled' : ''}">
                        <a class="page-link" href="#" data-page="${currentPage + 1}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                `);

                // Page click event
                $('.page-link').on('click', function(e) {
                    e.preventDefault();
                    const page = $(this).data('page');
                    
                    if (page < 1 || page > totalPages || page === currentPage) {
                        return;
                    }
                    
                    currentPage = page;
                    loadCustomers(currentPage, limit, search);
                });
            }

            // Function to update table info text
            function updateTableInfo(pagination) {
                const start = pagination.total === 0 ? 0 : (currentPage - 1) * pagination.limit + 1;
                const end = Math.min(currentPage * pagination.limit, pagination.total);
                $('#tableInfo').text(`Showing ${start} to ${end} of ${pagination.total} entries`);
            }

            // Function to delete a customer
            function deleteCustomer(customerId) {
                $.ajax({
                    url: `/api/sales/customer/general/${customerId}`,
                    type: 'DELETE',
                    success: function(response) {
                        if (response.success) {
                            $('#deleteModal').modal('hide');
                            loadCustomers(currentPage, limit, search);
                            alert('Customer deleted successfully');
                        } else {
                            alert('Failed to delete customer: ' + response.message);
                        }
                    },
                    error: function(xhr) {
                        console.error('Error deleting customer:', xhr);
                        alert('An error occurred while deleting the customer. Please try again.');
                    }
                });
            }
        });
    </script>
</body>
</html> 
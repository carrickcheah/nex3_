<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../shared/components/header.ejs') %>
    <title><%= pageTitle %></title>
    <style>
        .card {
            border-radius: 0;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
            margin-bottom: 30px;
            height: 100%;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }
        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #e9ecef;
            font-weight: 600;
        }
        .card-body {
            padding: 1.5rem;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-outline-secondary {
            color: #6c757d;
            border-color: #6c757d;
        }
        .card-icon {
            font-size: 2.5rem;
            color: #007bff;
            margin-bottom: 1rem;
        }
        .card-title {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        .card-text {
            color: #6c757d;
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>
    <%- include('../../shared/components/navbar.ejs') %>
    <div class="container-fluid">
        <div class="row">
            <%- include('../../shared/components/sidebar.ejs') %>
            <main class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Customer Setup Dashboard</h1>
                </div>
                
                <div class="row">
                    <!-- General Customer Setup -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <div class="card-icon">
                                    <i class="fas fa-users"></i>
                                </div>
                                <h5 class="card-title">Customer General Setup</h5>
                                <p class="card-text">Manage customer profile information, accounts, and status.</p>
                                <a href="/page/sales/customer/general" class="btn btn-primary">Go to Customer Setup</a>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Billing Address -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <div class="card-icon">
                                    <i class="fas fa-file-invoice"></i>
                                </div>
                                <h5 class="card-title">Billing Address</h5>
                                <p class="card-text">Manage customer billing addresses for invoices and payments.</p>
                                <a href="/page/sales/billing-address" class="btn btn-primary">Go to Billing Address</a>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Currency Setup -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <div class="card-icon">
                                    <i class="fas fa-money-bill-wave"></i>
                                </div>
                                <h5 class="card-title">Currency Setup</h5>
                                <p class="card-text">Configure customer currencies for transactions and reports.</p>
                                <a href="/page/sales/currency-setup" class="btn btn-primary">Go to Currency Setup</a>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Contact Setup -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <div class="card-icon">
                                    <i class="fas fa-address-book"></i>
                                </div>
                                <h5 class="card-title">Contact Setup</h5>
                                <p class="card-text">Manage customer contacts, phone numbers, and email addresses.</p>
                                <a href="/page/sales/customer_contact_setup" class="btn btn-primary">Go to Contact Setup</a>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Delivery Address -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <div class="card-icon">
                                    <i class="fas fa-truck"></i>
                                </div>
                                <h5 class="card-title">Delivery Address</h5>
                                <p class="card-text">Configure customer delivery addresses for orders and shipments.</p>
                                <a href="/page/sales/customer_delivery_address" class="btn btn-primary">Go to Delivery Address</a>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Price List -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <div class="card-icon">
                                    <i class="fas fa-tags"></i>
                                </div>
                                <h5 class="card-title">Price List</h5>
                                <p class="card-text">Manage customer-specific pricing and discount structures.</p>
                                <a href="/page/sales/customer_price_list" class="btn btn-primary">Go to Price List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <%- include('../../shared/components/footer.ejs') %>
    
    <script>
        $(document).ready(function() {
            // Ensure all cards in a row have the same height
            function equalizeCardHeights() {
                $('.row').each(function() {
                    const cards = $(this).find('.card');
                    let maxHeight = 0;
                    
                    // Reset heights
                    cards.css('height', 'auto');
                    
                    // Find max height
                    cards.each(function() {
                        const cardHeight = $(this).outerHeight();
                        maxHeight = Math.max(maxHeight, cardHeight);
                    });
                    
                    // Set all to max height
                    cards.css('height', maxHeight + 'px');
                }); 
            }
            
            // Initialize and also on window resize
            equalizeCardHeights();
            $(window).resize(function() {
                equalizeCardHeights();
            });
        });
    </script>
</body>
</html> 
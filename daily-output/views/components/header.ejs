<!-- components/header.ejs -->
<div class="page-header">
  <div class="w3-panel" style="background-color: rgb(0,0,255); color: white; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,255,0.2); padding: 16px;">
    <h2 style="margin: 0; font-weight: 600; letter-spacing: 0.5px;"><%= title %></h2>
    <% if (locals.status) { %>
      <span class="w3-tag w3-round <%= status.css || 'w3-blue' %>" style="margin-top: 8px; padding: 4px 12px; font-size: 0.9rem; font-weight: 500;"><%= status.name %></span>
    <% } %>
  </div>
</div>

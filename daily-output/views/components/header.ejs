<!-- components/header.ejs -->
<div class="page-header">
  <div class="w3-panel" style="background-color: rgb(0,0,255); color: white; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,255,0.2); padding: 16px;">
    <h2 style="margin: 0; font-weight: 600; letter-spacing: 0.5px;"><%= title %></h2>
    <% if (locals.status) { %>
      <span class="w3-tag w3-round <%= status.css || 'w3-blue' %>" style="margin-top: 8px; padding: 4px 12px; font-size: 0.9rem; font-weight: 500;"><%= status.name %></span>
    <% } %>
  </div>
  
  <!-- Navigation Links -->
  <div class="w3-bar w3-light-grey w3-padding">
    <a href="/page/manufacture/daily_inquiry" class="w3-bar-item w3-button">Daily Output List</a>
    <a href="/page/manufacture/daily_output/new" class="w3-bar-item w3-button">New Daily Output</a>
    <a href="/page/manufacture/new_job_order" class="w3-bar-item w3-button">Job Orders</a>
    <a href="/page/dashboard" class="w3-bar-item w3-button">Dashboard</a>
  </div>
</div>
